QMenu
{
    background-color: #3d3d3d
}

QMenu::item 
{
    background-color: #3d3d3d;
    border-width: 1px;
    border-color: #3d3d3d;
    color: #efefef;
    margin: 0px;
    padding: 5px;
    min-width: 100%;
    min-height: 20%; 
}

QMenu::item:hovered 
{ 
    background-color: #5b71a0;
    border-width: 1px;
    border-color: #5b71a0;
}